{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": true,
    "downlevelIteration": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noErrorTruncation": true,
    "jsx": "react",
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "@auxta/lib/*": ["src/lib/*"],
      "@auxta/types/*": ["src/types/*"],
      "@auxta/api/*": ["src/api/*"],
      "@auxta/classes/*": ["src/classes/*"],
      "@auxta/utils/*": ["src/utils/*"],
      "@auxta/errors/*": ["src/errors/*"],
      "@auxta/constants/*": ["src/constants/*"],
      "@auxta/core/*": ["src/core/*"],
      "@auxta/metadata/*": ["src/metadata/*"],
      "@auxta/decorators/*": ["src/decorators/*"]
    },
    "lib": [
      "dom",
      "esnext.asynciterable",
      "es2015",
      "es2016",
      "es2017.object"
    ]
  },
  "include": [
    "src/**/*",
    "tests/**/*", 
    "examples/**/*", 
    "index.ts"  
  ],
  "exclude": [
    "node_modules/**/*",
    "dist/**/*",
    "node_modules/@types/mocha/index.d.ts"
  ]
}